<div class="container" id="profil-container">
  <div class="row justify-content-center">
    <div class="col-xs-11 col-sm-11 col-md-9 col-lg->9">
      <h1 class="text-secondary">My profile</h1>
        <small>(<%= @user.email %>)</small>  <%= button_to "Edit", edit_user_registration_path, :method => "get", class: "btn btn-info btn-sm" %>
        <hr>
        <p>Purchase history :</p>
        <% @user.orders.each do |order| %>
          <div class="card">
            <div class="card-body row">
              <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                <h5 class="card-title">Order n°<%= order.id %></h5>
                <p class="card-text"><%=order.created_at.strftime("%d %B %Y")%></p>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 text-right">
                <% order.items.each do |item| %>
                <%=item.title%>
                <span class="text-muted"><%=item.price%>€</span>
                <%= image_tag item.cat_picture, :style => "height: 50px" %>
                <br><br>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
