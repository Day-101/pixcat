<div class="container" id="profil-container">
  <div class="row">
    <div class="col-8">
      <h1>My profil</h1>
      <small>(<%= @user.email %>)</small>  <%= button_to "Edit", edit_user_registration_path, :method => "get", class: "btn btn-info btn-sm" %>
      <hr>
      <p>Purchase history :</p>
      <ul class="list-group">
        <% @user.orders.each do |order| %>
        <% total=0 %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <% order.items.each do |item| %>
              <%=item.title%>
              <%=item.price%>€
              <br>
              <% total= total+item.price %>
              <% end %>
              Total: <%= total %>€
              <% total=0 %>
              <span class="badge badge-info badge-pill"><%=order.created_at%></span>
              <br>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
