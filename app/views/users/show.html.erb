<div class="container" id="profil-container">
  <div class="row">
    <div class="col-xs-11 col-sm-11 col-md-10 col-lg-10">
      <h1>My profile</h1>
        <small>(<%= @user.email %>)</small>  <%= button_to "Edit", edit_user_registration_path, :method => "get", class: "btn btn-info btn-sm" %>
        <hr>
        <p>Purchase history :</p>
        <% @user.orders.each do |order| %>
          <div class="card">
            <div class="card-body row">
              <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <h5 class="card-title">Order n°<%= order.id %></h5>
                <p class="card-text"><%=order.created_at.strftime("%d %b %y")%></p>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 text-right">
                <% total=0 %>
                <% order.items.each do |item| %>
                <%=item.title%>
                <%=item.price%>€
                <%= image_tag item.cat_picture, :style => "height: 50px" %>
                <br><br>
                <% total= total+item.price %>
                <% end %>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 text-right">
                Total: <%= total %>€
                <% total=0 %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
