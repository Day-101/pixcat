<div class="container grid-container grid-responsive my-4">
  <% @items.each do |item| %>
    <div class="custom-card p-4">
    <% if user_signed_in? %>
        <a href="<%= item_path(item.id) %>" class="text-decoration-none">
      <% else %>
        <a href="<%=new_user_session_path%>" class="custom-card text-decoration-none">
    <% end %>
          <div class="">
            <%= image_tag item.thumbnail, :class => "card-img-top img-card-radius" %>
            <div class="">
              <h5 class="card-title text-center m-0 p-2 text-secondary"><%= item.title %></h5>
              <span class="text-center d-block mb-1 font-weight-bold text-dark"><%= "#{item.price} â‚¬" %></span>
            </div>
          </div>
        </a>
    <% if user_signed_in? %>
        <span class="text-center">
          <%= button_to "Add to cart", cart_add_to_path(current_user.cart, item), method: "put", class: "btn btn-outline-primary btn-sm" %>
        </span>
    <% end %>
    </div>
  <% end %>
</div>
