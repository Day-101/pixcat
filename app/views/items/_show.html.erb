
<div class="container" id="homepage">
  <div class="card">
    <img class="card-img" src="<%= @item.image_url %>" alt="Card image not found">
    <div class="card-body">
      <h5 class="card-title"> <%= @item.title %> </h5>
      <p class="card-text"> <%= @item.description %> </p>
      <p class="card-text"> <%= @item.price %> $ </p>
      <td>
        <!-- <= if  %>  rajouter la fonction de comparaison du createur de l'item -->
          <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-outline-danger" %>
        <!-- < end %> -->
        <!-- <= if  %>  rajouter la fonction de comparaison si tes un user -->
          <%= link_to "Add to cart", item_path(@item.id), class: "btn btn-outline-primary", :method => "get" %>
        <!-- < end %> -->
        <%= link_to 'Back', items_path, class: "btn btn-outline-secondary" %>
      </td>
    </div>
  </div>
</div>
